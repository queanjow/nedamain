{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "assets": ["assets"],
            "components": ["components"],
            "layouts": ["layouts"],
            "variables": ["variables"],
            "views*": ["views"]
        },

        "allowSyntheticDefaultImports": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node"
    }
}
